doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Forum system
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,900')
        link(rel='stylesheet', href='/public/styles/bootstrap.css')
        link(rel='stylesheet', href='/public/styles/site.css')
        link(rel='stylesheet', href='/public/styles/toastr.min.css')
    body
        header
            nav.navbar.navbar-default.navbar-static-top
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Forum System
                #navbar.navbar-collapse.collapse
                    form.navbar-form.navbar-left.animated(action='', method='get')
                        .input-group
                            input.form-control(type='text', placeholder='Search...')
                            span.input-group-btn
                                button.btn.btn-default
                                    span.glyphicon.glyphicon-search
                    ul.nav.navbar-nav
                        li
                            a(href='/') Home
                    if user
                        ul.nav.navbar-nav.pull-right
                            li
                                a#user-name= user.username
                            li
                                form#logout-form(method='post', action='/user/logout')
                                a(href='javascript:document.getElementById("logout-form").submit()') Logout
                    else
                        ul.nav.navbar-nav.pull-right
                            li
                                a(href='/user/register') Register
                            li
                                a(href='/user/login') Login
        main
            if error
                .panel.message.error= error
            if success
                .panel.message.success= success
            block content
        footer
            .container
                .row
                    .col-sm-5
                        h3.lead
                            strong Information
                            |  and
                            strong Copyright
                        p
                            | Powered by
                            strong Node.js
                            | ,
                            strong MongoDB
                            |  and
                            strong React
                            |                         with Flux architecture and server-side rendering.
                        p
                            | You may view the
                            a(href='https://github.com/sahat/newedenfaces-react') Source Code
                            |                         behind this project on GitHub.
                        p Â© 2015 Sahat Yalkabov.
                    .col-sm-7.hidden-xs
                        h3.lead
                            strong Leaderboard
                            |  Top 5 Characters
                        ul.list-inline
                            | {leaderboardCharacters}